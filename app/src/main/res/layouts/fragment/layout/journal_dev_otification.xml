<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal|center"
    tools:context=".thread_process.JournalDevNotification"
    >
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notification Actions"
        android:backgroundTint="@color/colorPrimary"
        android:onClick="notificationAction"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heads Up Notification"
        android:backgroundTint="@color/colorPrimary"
        android:onClick="headsUpNotification"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Big Text Style"
        android:backgroundTint="@color/colorPrimary"
        android:onClick="bigTextStyle"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Big Picture Style"
        android:backgroundTint="@color/colorPrimary"
        android:onClick="bigPictureStyle"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inbox Style"
        android:backgroundTint="@color/colorPrimary"
        android:onClick="inboxStyle"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message Style"
        android:backgroundTint="@color/colorPrimary"
        android:onClick="messageStyle"
        />


  </LinearLayout>