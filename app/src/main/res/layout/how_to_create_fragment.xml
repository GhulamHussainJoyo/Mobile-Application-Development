<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HowToCreateFragment"
    android:orientation="horizontal"
    >

    <fragment
        android:id="@+id/frag1"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="match_parent"
        android:name="com.example.myapplication.fragments.ListFragment"
        tools:layout="@layout/fragment_listview"/>

    <fragment
        android:id="@+id/frag2"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="match_parent"
        android:name="com.example.myapplication.fragments.DetailsFragment"
        tools:layout="@layout/fragment_details"/>


</LinearLayout>